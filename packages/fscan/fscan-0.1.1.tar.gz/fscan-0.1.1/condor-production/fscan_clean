#!/bin/bash -le

# Run clean - daily
conda run --prefix /home/pulsar/.conda/envs/fscan-py3.10 clean --path=/home/pulsar/public_html/fscan/1800s/H1_DMT-ANALYSIS_READY/day --ndays=120
conda run --prefix /home/pulsar/.conda/envs/fscan-py3.10 clean --path=/home/pulsar/public_html/fscan/1800s/ALL/day --ndays=60

# Run clean - weekly
conda run --prefix /home/pulsar/.conda/envs/fscan-py3.10 clean --path=/home/pulsar/public_html/fscan/1800s/H1_DMT-ANALYSIS_READY/week --ndays=120
conda run --prefix /home/pulsar/.conda/envs/fscan-py3.10 clean --path=/home/pulsar/public_html/fscan/1800s/ALL/week --ndays=60

# Run clean - monthly
conda run --prefix /home/pulsar/.conda/envs/fscan-py3.10 clean --path=/home/pulsar/public_html/fscan/1800s/H1_DMT-ANALYSIS_READY/month --ndays=120
conda run --prefix /home/pulsar/.conda/envs/fscan-py3.10 clean --path=/home/pulsar/public_html/fscan/1800s/ALL/month --ndays=60
