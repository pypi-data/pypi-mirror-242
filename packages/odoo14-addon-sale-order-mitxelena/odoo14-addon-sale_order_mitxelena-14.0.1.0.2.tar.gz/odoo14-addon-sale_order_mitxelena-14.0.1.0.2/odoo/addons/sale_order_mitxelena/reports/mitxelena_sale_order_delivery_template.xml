<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_delivery_template">
        <t t-call="sale_order_mitxelena.standar_layout">
            <t t-set="doc" t-value="doc.with_context(lang=lang)" />
            <div class="page">
                <div class="row">
                    <div class="col-6">
                        <p>
                            <b>
                                <span t-field="doc.company_id.partner_id" />
                            </b>
                        </p>
                        <p>
                            <span t-field="doc.company_id.street" />
                            <br />
                            <span t-if="doc.company_id.street2">
                                <span t-field="doc.company_id.street2" />
                                <br />
                            </span>
                            <span t-field="doc.company_id.state_id" />
                            <span t-field="doc.company_id.zip" />
                        </p>

                        <p>
                            <span t-field="doc.company_id.phone" />
                            <br />
                            <span t-field="doc.company_id.email" />
                            <br />
                            <span t-field="doc.company_id.website" />
                        </p>
                    </div>

                    <div class="col-6">
                        <p>
                            <b>
                                <span t-field="doc.partner_id" />
                                <span t-field="doc.partner_id.vat" />
                            </b>
                        </p>
                        <p>
                            <span t-field="doc.partner_id.street" />
                            <br />
                            <span t-if="doc.partner_id.street2">
                                <span t-field="doc.partner_id.street2" />
                                <br />
                            </span>
                            <span t-field="doc.partner_id.state_id" />
                            <span t-field="doc.partner_id.zip" />
                        </p>

                        <p>
                            <span t-field="doc.partner_id.phone" />
                            <br />
                            <span t-field="doc.partner_id.email" />
                            <br />
                            <span t-field="doc.partner_id.website" />
                        </p>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col">
                        <h1 t-field="doc.name"></h1>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>